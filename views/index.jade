ul#games
  - for(game in games){
    - if (games[game].grid.players.length < 11){
      li
        a(href='/game/#{game}')
          | Players:
          = games[game].grid.players.length
          \ -
          |Score:
          = games[game].grid.score
          canvas.mini-map(id="game-map-#{game}", width="320", height="48")
          script(type="text/javascript")
            new Tetris.StaticMiniMap("game-map-#{game}", !{JSON.stringify(games[game].grid.blocks())});
    - }
  - }

